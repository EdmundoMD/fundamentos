#include <iostream>

using namespace std;

int main()
{
  float a,b,r;
  int opcion;
    cout<<"Ingrese el dato de a: ";
    cin>>a;
     cout<<"Ingrese el dato de b: ";
    cin>>b;
    cout<<"1.-SUMA"<<endl;
    cout<<"2.-RESTA"<<endl;
    cout<<"3.-MULTIPLICACION"<<endl;
    cout<<"4.-DIVISION"<<endl;
    cout<<"Elige una opcion: "<<endl;
    cin>>opcion;
    switch(opcion){
        case 1:r=a+b;break;
        case 2:r=a-b;break;
        case 3:r=a*b;break;
        case 4:r=a/b;break;
        default:cout<<"Opcion invalida"<<endl;
    }
    cout<<"El resultao es: "<<r<<endl;
    
    return 0;
}
